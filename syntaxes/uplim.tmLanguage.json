{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "UPLim",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#support"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"end": "$",
					"name": "comment.line.double-slash.uplim"
				},
				{
					"begin": "#",
					"end": "$",
					"name": "comment.line.number-sign.uplim"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "\\b(let|l|const|if|else|e|while|loop|for|in|match|m|return|ret|struct|enum|import|from|async|await|spawn|break|make)\\b",
					"name": "keyword.control.uplim"
				},
				{
					"match": "\\b(fn|func|f)\\b",
					"name": "storage.type.function.uplim"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"match": "\\b(Int|Float|Bool|String|Void)\\b",
					"name": "storage.type.primitive.uplim"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.uplim",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.uplim",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"match": "\\b\\d+(\\.\\d+)?\\b",
					"name": "constant.numeric.uplim"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "entity.name.function.uplim" }
					}
				}
			]
		},
		"support": {
			"patterns": [
				{
					"match": "\\b(say|print|p)\\b",
					"name": "support.function.builtin.uplim"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "(=>|::|\\.\\.\\.|\\.\\.|->|\\|>|\\+|-|\\*|/|>|<|=|:)",
					"name": "keyword.operator.uplim"
				}
			]
		}
	},
	"scopeName": "source.uplim"
}
